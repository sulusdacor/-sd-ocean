<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- 	==============		fern		===========	-->

  <ThingDef ParentName="PlantBase">
    <defName>sd_ocean_plant_fern</defName>
    <label>fern</label>
    <description>Ferns are very common in temperate Rimworlds. They are a main part of many tribes folklore and they appear in tales about traveling, determening the fate of the wayfarer.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>sd_ocean/plants/fern</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>18</pathCost>
    <hideAtSnowDepth>1</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.18</nutrition>
    </ingestible>
    <plant>
			<fertilityMin>0.07</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>3</growDays>
			<reproduceRadius>42</reproduceRadius>
			<reproduceMtbDays>3</reproduceMtbDays>
			<harvestWork>60</harvestWork>
			<wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
			<visualSizeRange>
				<min>0.7</min>
				<max>0.85</max>
			</visualSizeRange>
			<wildClusterSizeRange>
				<min>2</min>
				<max>5</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<maxMeshCount>9</maxMeshCount>
			<topWindExposure>0.4</topWindExposure>
	  
	  	<!--	remove below if not in other biomes wanted, only low base values	-->
	  
		<wildBiomes>
			<Tundra>0.05</Tundra>
			<BorealForest>0.05</BorealForest>
			<TemperateForest>0.05</TemperateForest>
			<TropicalRainforest>0.05</TropicalRainforest>
		</wildBiomes>
		
		
    </plant>
  </ThingDef>




</Defs>