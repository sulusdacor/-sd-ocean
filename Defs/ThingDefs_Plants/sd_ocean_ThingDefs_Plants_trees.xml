<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--======================= common willow  ========================-->

   <ThingDef ParentName="TreeBase">
    <defName>sd_ocean_plant_common_willow</defName>
    <label>common willow</label>
    <description>A softwood tree. Grows fast, but yield little useful wood.</description>
    <graphicData>
      <texPath>sd_ocean/plants/common_willow</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>3</Beauty>
    </statBases>
    <ingestible>
      <nutrition>0.75</nutrition>
    </ingestible>
    <plant>
			<growDays>15.05</growDays>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
			<harvestWork>650</harvestWork>
      <harvestYield>30</harvestYield>
    </plant>
  </ThingDef>
  
   <!--======================= palm tree on beach  ========================-->

   <ThingDef ParentName="TreeBase">
    <defName>sd_ocean_plant_palm_beach</defName>
    <label>palm tree</label>
    <description>A softwood tree. Grows fast, but yield little useful wood.</description>
    <graphicData>
      <texPath>sd_ocean/plants/palm</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <shadowData>
        <volume>(0.15, 0.3, 0.1)</volume>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>3</Beauty>
    </statBases>
    <ingestible>
      <nutrition>0.75</nutrition>
    </ingestible>
    <plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<growDays>15.05</growDays>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
			<harvestWork>650</harvestWork>
			<harvestYield>30</harvestYield>
			<wildClusterSizeRange>
				<min>5</min>
				<max>30</max>
			</wildClusterSizeRange>
    </plant>
  </ThingDef>
  
